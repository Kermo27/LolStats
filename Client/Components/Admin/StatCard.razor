<MudPaper Class="pa-4 stat-card" Elevation="0">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
        <MudStack Spacing="1">
            <MudText Typo="Typo.body2" Class="text-gray-400">@Title</MudText>
            <MudText Typo="Typo.h4" Class="font-bold">@Value</MudText>
            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <MudText Typo="Typo.caption" Color="Color.Success">@Subtitle</MudText>
            }
        </MudStack>
        <MudAvatar Color="@Color" Size="Size.Large" Class="stat-icon">
            <MudIcon Icon="@Icon" />
        </MudAvatar>
    </MudStack>
</MudPaper>

<style>
    .stat-card {
        background: linear-gradient(135deg, rgba(40, 40, 55, 0.8) 0%, rgba(30, 30, 45, 0.9) 100%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }
    
    .stat-icon {
        opacity: 0.9;
    }
</style>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.Info;
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public string? Subtitle { get; set; }
}
