@inject AuthenticationStateProvider AuthStateProvider

<MudNavMenu Dense="true" Class="pt-4">
    
    @foreach (var link in _navLinks)
    {
        <MudNavLink Href="@link.Href"
                    Match="@link.Match"
                    Icon="@link.Icon"
                    Class="hover:bg-[#2a2a35] hover:text-white rounded-lg mx-2 my-1 transition-colors duration-200"
                    ActiveClass="bg-[#2563eb] text-white font-semibold rounded-lg mx-2 my-1 shadow-md shadow-blue-500/20">
            @link.Title
        </MudNavLink>
    }
    
    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudDivider Class="my-3 mx-4" Style="border-color: rgba(255,255,255,0.1);" />
            <MudNavLink Href="admin"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Filled.AdminPanelSettings"
                        Class="hover:bg-[#2a2a35] hover:text-white rounded-lg mx-2 my-1 transition-colors duration-200"
                        ActiveClass="bg-[#8b5cf6] text-white font-semibold rounded-lg mx-2 my-1 shadow-md shadow-purple-500/20">
                Admin Panel
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
    
</MudNavMenu>

@code {
    private record NavItem(string Title, string Href, string Icon, NavLinkMatch Match = NavLinkMatch.Prefix);
    
    private readonly List<NavItem> _navLinks = new()
    {
        new("Dashboard", "", Icons.Material.Filled.Dashboard, NavLinkMatch.All),
        new("Match History", "matches", Icons.Material.Filled.History),
        new("Champion Stats", "champions", Icons.Material.Filled.People),
    };
}
