<div class="relative inline-block w-[220px]">
    <input type="text"
           @bind="Value"
           @bind:event="oninput"
           placeholder="@Placeholder"
           class="w-full bg-[#1e1e1e] border border-gray-700 rounded-lg p-2 text-gray-200
                  focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition duration-150"
           @onfocus="() => showList = true"
           @onblur="HideList" />

    @if (showList && FilteredChampions.Any())
    {
        <ul class="absolute z-20 list-none bg-[#1a1a1a] border border-gray-700 rounded-lg shadow-lg 
                   w-full mt-1 max-h-[200px] overflow-auto text-gray-200 p-0 scrollbar-thin scrollbar-thumb-gray-700 scrollbar-track-[#111]"
            @onmousedown:preventDefault>
            @foreach (var champ in FilteredChampions)
            {
                <li class="px-3 py-2 hover:bg-blue-600 hover:text-white cursor-pointer transition-colors"
                    @onmousedown="() => SelectChampion(champ)">
                    @champ
                </li>
            }
        </ul>
    }
</div>

@code {
    [Parameter]
    public string Placeholder { get; set; } = "Select champion...";

    [Parameter]
    public string Value { get; set; } = "";

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter]
    public List<string> Champions { get; set; } = new();

    private bool showList;

    private IEnumerable<string> FilteredChampions =>
        string.IsNullOrWhiteSpace(Value)
            ? Champions.Take(5)
            : Champions
                .Where(c => c.Contains(Value, StringComparison.OrdinalIgnoreCase))
                .Take(5);

    private async Task SelectChampion(string champ)
    {
        Value = champ;
        await ValueChanged.InvokeAsync(champ);
        showList = false;
    }

    private async Task HideList()
    {
        await Task.Delay(150);
        showList = false;
    }
}