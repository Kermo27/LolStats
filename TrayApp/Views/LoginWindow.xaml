<Window x:Class="LolStatsTracker.TrayApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Stats Tracker - Login"
        Width="400" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="ðŸŽ® LoL Stats Tracker" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#CDD6F4"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="ModeText"
                       Text="Login to your account" 
                       FontSize="14" 
                       Foreground="#A6ADC8"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Error Message -->
        <Border x:Name="ErrorBorder"
                Grid.Row="1"
                Background="#F38BA8"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,20"
                Visibility="Collapsed">
            <TextBlock x:Name="ErrorText"
                       Foreground="#1E1E2E"
                       TextWrapping="Wrap"
                       FontWeight="Medium"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="2">
            <!-- Username -->
            <TextBlock Text="Username" 
                       Foreground="#CDD6F4" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox"
                     Padding="10"
                     Background="#313244"
                     Foreground="#CDD6F4"
                     BorderBrush="#45475A"
                     FontSize="14"/>

            <!-- Email (only for register mode) -->
            <TextBlock x:Name="EmailLabel"
                       Text="Email (optional)" 
                       Foreground="#CDD6F4" 
                       Margin="0,15,0,5"
                       Visibility="Collapsed"/>
            <TextBox x:Name="EmailBox"
                     Padding="10"
                     Background="#313244"
                     Foreground="#CDD6F4"
                     BorderBrush="#45475A"
                     FontSize="14"
                     Visibility="Collapsed"/>

            <!-- Password -->
            <TextBlock Text="Password" 
                       Foreground="#CDD6F4" 
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Padding="10"
                         Background="#313244"
                         Foreground="#CDD6F4"
                         BorderBrush="#45475A"
                         FontSize="14"/>

            <!-- Confirm Password (only for register mode) -->
            <TextBlock x:Name="ConfirmPasswordLabel"
                       Text="Confirm Password" 
                       Foreground="#CDD6F4" 
                       Margin="0,15,0,5"
                       Visibility="Collapsed"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Padding="10"
                         Background="#313244"
                         Foreground="#CDD6F4"
                         BorderBrush="#45475A"
                         FontSize="14"
                         Visibility="Collapsed"/>

            <!-- Submit Button -->
            <Button x:Name="SubmitButton"
                    Content="Login"
                    Margin="0,25,0,0"
                    Padding="15,10"
                    Background="#89B4FA"
                    Foreground="#1E1E2E"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SubmitButton_Click"/>

            <!-- Toggle Mode -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <TextBlock x:Name="ToggleText"
                           Text="Don't have an account?" 
                           Foreground="#A6ADC8"/>
                <TextBlock x:Name="ToggleLink"
                           Text=" Register here" 
                           Foreground="#89B4FA"
                           Cursor="Hand"
                           MouseLeftButtonUp="ToggleMode_Click"
                           TextDecorations="Underline"/>
            </StackPanel>
        </StackPanel>

        <!-- Loading Indicator -->
        <StackPanel x:Name="LoadingPanel"
                    Grid.Row="2"
                    Visibility="Collapsed"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Please wait..." 
                       Foreground="#CDD6F4"
                       FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
