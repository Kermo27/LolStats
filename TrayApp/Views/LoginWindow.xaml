<Window x:Class="LolStatsTracker.TrayApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LolStatsTracker.TrayApp.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:LoginViewModel}"
        Title="LoL Stats Tracker - Login"
        Width="400" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="ðŸŽ® LoL Stats Tracker" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#CDD6F4"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="ModeText"
                       Text="Login to your account" 
                       FontSize="14" 
                       Foreground="#A6ADC8"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Error Message -->
        <Border Grid.Row="1"
                Background="#F38BA8"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,20">
             <Border.Style>
                 <Style TargetType="Border">
                     <Setter Property="Visibility" Value="Visible"/>
                     <Style.Triggers>
                         <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                             <Setter Property="Visibility" Value="Collapsed"/>
                         </DataTrigger>
                         <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                              <Setter Property="Visibility" Value="Collapsed"/>
                         </DataTrigger>
                     </Style.Triggers>
                 </Style>
             </Border.Style>
            
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#1E1E2E"
                       TextWrapping="Wrap"
                       FontWeight="Medium"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="2">
            <!-- Username -->
            <TextBlock Text="Username" 
                       Foreground="#CDD6F4" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10"
                     Background="#313244"
                     Foreground="#CDD6F4"
                     BorderBrush="#45475A"
                     FontSize="14"/>

            <!-- Email (only for register mode - omitted for now in MVVM refactor as it wasn't fully impl) -->
            
            <!-- Password -->
            <TextBlock Text="Password" 
                       Foreground="#CDD6F4" 
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Padding="10"
                         Background="#313244"
                         Foreground="#CDD6F4"
                         BorderBrush="#45475A"
                         FontSize="14"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <!-- Submit Button -->
            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    Margin="0,25,0,0"
                    Padding="15,10"
                    Background="#89B4FA"
                    Foreground="#1E1E2E"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Toggle Mode -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <TextBlock Text="Don't have an account?" 
                           Foreground="#A6ADC8"/>
                <TextBlock Text=" Register here" 
                           Foreground="#89B4FA"
                           Cursor="Hand"
                           TextDecorations="Underline"/>
            </StackPanel>
        </StackPanel>

        <!-- Loading Indicator -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="Please wait..." 
                       Foreground="#CDD6F4"
                       FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
